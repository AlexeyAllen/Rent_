@page
@model RentWeb.Pages.Customer.Home.IndexModel
<div class="row container pb-3 backgroundWhite">
	<h1 class="text-primary font-weight-bold"><b>Каталог</b></h1>
	@foreach (var category in Model.CategoryList)
	{
		<h2 class="text-primary pl-1"><b>@category.Name</b></h2>
		<div class="col-12">
			<div class="row my-3">
				@foreach (var catalogItem in Model.CatalogItemList.Where(u => u.CategoryId == category.Id))
				{
					<div class="col-lg-4 col-md-6 col-sm-12 pb-4 filter">
						<div>
							<div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
								<div class="card-body pb-1 row">
									<div class="col-8 h5">@catalogItem.Name</div>
									<div class="col-4 text-end"><span class="text-info h4">@catalogItem.Price p</span></div>
								</div>
								<img class="card-img-top img-fluid d-block mx-auto mb-3" style="height: 250px; width: auto" src="@catalogItem.ImageUrl" alt="catalogitem image">
								<div class="card-body p-1 px-3 row">
									<div class="col-6">
										<span class="badge p-2 border w-100 text-dark" style="background-color: #ffbd00;">@catalogItem.Category.Name</span>
									</div>
									<div class="col-6 border-0">
										<span class="badge p-2 border w-100 bg-primary ">@catalogItem.PowerType.Name</span>
									</div>
									<div class="scrollable">
										<div class="col-12 pt-2" style="font-size:13px; text-align:justify">
											<p> @Html.Raw(catalogItem.Description)</p>
										</div>
									</div>
									<div class="col-12 p-1">
										<a asp-page="Details" asp-route-id="@catalogItem.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">Подробнее..</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				}
			</div>
		</div>
	}
</div>
